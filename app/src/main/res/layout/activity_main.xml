<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/ble_scan_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Conn"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/ble_connect_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/ble_connect_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Conn Gatt"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sentC0_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/setup_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="setup"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sentD6_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentC0_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="send C0"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/setup_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentD6_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="send D6"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sentD7_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentD7_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="locked"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sentC7_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sentC7_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Admin_code"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/bt_connect_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:text="BT scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <fragment
        android:id="@+id/my_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_main" />

</androidx.constraintlayout.widget.ConstraintLayout>