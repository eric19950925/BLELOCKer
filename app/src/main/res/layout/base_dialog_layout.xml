<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:edit_field_compound="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    edit_field_compound:layout_constraintStart_toStartOf="parent"
    edit_field_compound:layout_constraintTop_toTopOf="parent"
    edit_field_compound:layout_constraintBottom_toBottomOf="parent"
    android:orientation="vertical">
    <com.sunionrd.blelocker.widget.EditFieldCompoundView
        android:id="@+id/efc_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        edit_field_compound:inputType="password"
        edit_field_compound:title="Password"
        android:visibility="gone"
        />
    <com.sunionrd.blelocker.widget.EditFieldCompoundView
        android:id="@+id/efc_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        edit_field_compound:inputType="code"
        android:visibility="gone"
        />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>