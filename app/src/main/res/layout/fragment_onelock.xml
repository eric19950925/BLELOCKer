<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/log_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="horizontal"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_my_lock" />

    <LinearLayout
        android:id="@+id/ll_my_lock"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/log_tv"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar">
        <LinearLayout
            android:id="@+id/ll_lock_data"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my lock's mac address:"/>
            <TextView
                android:id="@+id/tv_my_lock_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my lock's token:"/>
            <TextView
                android:id="@+id/tv_my_lock_tk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_my_lock_ble_status"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:src="@drawable/ic_lock_state_ready_to_connect"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_factory"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic__factory"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_lock"
        app:layout_constraintTop_toTopOf="@+id/ll_my_lock"
        app:layout_constraintBottom_toBottomOf="@+id/ll_my_lock"
        />
    <Button
        android:id="@+id/btn_lock"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_auto_unlock"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_my_lock"
        app:layout_constraintBottom_toBottomOf="@+id/ll_my_lock"
        />


</androidx.constraintlayout.widget.ConstraintLayout>