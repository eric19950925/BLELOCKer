<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ll_my_lock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_305"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        app:strokeWidth="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorOnSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/ll_lock_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/tvLockName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="KD0"/>
            <Button
                android:id="@+id/iv_my_lock_ble_status"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ic_baseline_bluetooth_searching_24"
                />
            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="end"
                android:src="@drawable/ic_baseline_settings_suggest_24"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>