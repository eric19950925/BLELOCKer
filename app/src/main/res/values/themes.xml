<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BLELOCKer" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_onPrimary</item>

        <item name="colorOnPrimary">@color/md_theme_light_primary</item>

        <item name="colorSecondary">@color/md_theme_light_onPrimary</item>

        <item name="colorOnSecondary">@color/md_theme_light_primary</item>

        <item name="colorError">@color/md_theme_light_error</item>

        <item name="colorOnError">@color/md_theme_light_onError</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>

        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>

        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

    </style>
    <style name="styleText" parent="android:TextAppearance">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleText.log">
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="styleView" parent="CardView">
        <item name="cardBackgroundColor">@color/md_theme_light_onPrimary</item>
    </style>
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_light_primary</item>
        <item name="colorSurface">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/md_theme_light_primary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.NegativeButton</item>
    </style>
    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:ellipsize">none</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.NegativeAction.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/error</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>